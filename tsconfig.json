{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2015", "dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts","src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
